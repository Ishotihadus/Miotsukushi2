<UserControl x:Class="Miotsukushi.View.CheatWindow.Components.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Miotsukushi.View.CheatWindow.Components"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid>
        <Image x:Name="Mascotimage" HorizontalAlignment="Right" Margin="0" Source="/Miotsukushi;component/Resources/miotukusi3.png"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,0,10,10" TextWrapping="Wrap" VerticalAlignment="Bottom"><Run Text="Official mascot character: Amatsukaze"/><LineBreak/><Run Text="Illustrated by Shacho"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom"><Run Text="(C) 2015 Ishotihadus"/><LineBreak/><Run Text="(C) 2013 DMM.com / KADOKAWA GAMES"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" TextAlignment="Justify" IsHyphenationEnabled="True"><Run Text="The Unofficial KanColle Client 'Miotsukushi' is made for you, an admiral, to play KanColle more effectively. This software reads, analyzes and displays communication data in this game, so does NOT automatically post anything to game server system. Please note that this is not a cheat tool helping you sallying, fulfilling your missions etc. When you play the game, do not overrely on this software and save your precious ship-girls by yourself."/><LineBreak/><Run/><LineBreak/><Run Text="This software is supported by"/><LineBreak/><Run Text="OG,"/><LineBreak/><Run Text="Shacho"/><LineBreak/><Run Text="and "/><Run Text="the all "/><Run Text="other players."/><LineBreak/><Run/><LineBreak/><Run Text="We use following libraries for this software:"/><LineBreak/><Run Text="Prism.MVVM, DynamicJson, MahApps.Metro."/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"><Run FontSize="24" Text="Unofficial KanColle Client"/><LineBreak/><Run FontSize="48" Text="Miotsukushi"/><LineBreak/><Run Text="ver. "/><Run Text="{Binding Version}"/></TextBlock>
    </Grid>
</UserControl>
