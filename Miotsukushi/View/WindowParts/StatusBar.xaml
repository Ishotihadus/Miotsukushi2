<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Miotsukushi.View.WindowParts.StatusBar"
	x:Name="UserControl"
	d:DesignWidth="640">

	<Grid x:Name="LayoutRoot" Background="{DynamicResource AccentColorBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="10,5,0,5" TextWrapping="Wrap" Text="{Binding Text, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" VerticalAlignment="Center" Foreground="{DynamicResource WhiteColorBrush}"/>
	</Grid>
</UserControl>