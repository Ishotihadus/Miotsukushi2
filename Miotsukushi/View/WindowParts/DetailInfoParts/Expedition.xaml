<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Miotsukushi.View.WindowParts.DetailInfoParts"
             xmlns:ExpeditionParts="clr-namespace:Miotsukushi.View.WindowParts.DetailInfoParts.ExpeditionParts" x:Class="Miotsukushi.View.WindowParts.DetailInfoParts.Expedition"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
        <UniformGrid Rows="1" Columns="3" VerticalAlignment="Top">
            <ExpeditionParts:ExpeditionFleet DataContext="{Binding [0]}"/>
            <ExpeditionParts:ExpeditionFleet DataContext="{Binding [1]}"/>
            <ExpeditionParts:ExpeditionFleet DataContext="{Binding [2]}"/>
        </UniformGrid>
    </ScrollViewer>
</UserControl>
