<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:Miotsukushi="clr-namespace:Miotsukushi"
	xmlns:GeneralParts="clr-namespace:Miotsukushi.View.WindowParts.DetailInfoParts.GeneralParts"
	mc:Ignorable="d"
	x:Class="Miotsukushi.View.WindowParts.DetailInfoParts.General"
	x:Name="UserControl"
	d:DesignWidth="566" d:DesignHeight="768">

    <ScrollViewer x:Name="LayoutRoot" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical">
            <Expander Header="司令部情報" Margin="0" VerticalAlignment="Top" IsExpanded="True">
                <GeneralParts:Basic />
            </Expander>
            <Expander Header="艦隊概要" Margin="0,10,0,0" IsExpanded="True">
                <GeneralParts:FleetsSummary/>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>